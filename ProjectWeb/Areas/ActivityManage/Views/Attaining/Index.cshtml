@* 达量奖励/活动列表*@
@{
    ViewBag.Title = "活动列表";
    Layout = "~/Views/Shared/_Index_v2.cshtml";
}

<div class="panel-body" style="padding-bottom:0px;">

    <div id="toolbar" class="btn-group">
            <button id="btn_add" type="button" class="btn btn-primary" onclick="window.location.href='Add'">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
            </button>
			<button type="button" class="btn btn-default" data-toggle="modal" data-target="#modalQuery">
				<span class="glyphicon glyphicon-search" aria-hidden="true"></span>更多搜索
			</button>
			<div class="input-group">
				<input class="form-control" id="name" type="text" placeholder="请输入活动名称"></input>
			</div>
    </div>

    <div>
        <table id="gridList" style="table-layout:fixed"></table>
    </div>

</div>

<div class="modal fade" id="modalQuery" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">
                    按条件搜索
                    <button id="clear" type="button" class="btn btn-warning btn-xs">清空</button>
                </h4>
            </div>
            <div class="modal-body">
                <form id="queryForm">
                    <div class="row">
                        <div class="col-sm-12 margin-bottom">
                            <span for="activity_status" class="col-sm-2 text-right lineheight34">活动状态</span>
                            <div class="input-group col-sm-9">                              
                                <select id="activity_status" class="form-control" type="text">
                                    <option value="">--请选择活动状态--</option>
									<option value="-2">审核未结束</option>
									<option value="-1">未开始</option>
									<option value="1">进行中</option>
									<option value="2">已结束</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-12 margin-bottom">
                            <span for="company_id" class="col-sm-2 text-right lineheight34">分公司</span>
                            <div class="input-group col-sm-9">
                                <select id="company_id" class="form-control" type="text"></select>
                            </div>
                        </div>
						<div class="col-sm-12 margin-bottom">
                            <span for="approve_status" class="col-sm-2 text-right lineheight34">审批状态</span>
                            <div class="input-group col-sm-9">                              
                                <select id="approve_status" class="form-control" type="text">
                                    <option value="">--请选择审批状态--</option>
									<option value="100">通过</option>
									<option value="-100">未通过</option>
									<option value="1">审批中</option>
									<option value="-1">未审批</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-12 margin-bottom">
                            <span class="col-sm-2 text-right lineheight34">开始时间</span>
                            <div class="input-group col-sm-9">
                                <input id="startTime1" type="text" class='form-control' readonly="readonly" onfocus="WdatePicker({ maxDate: '#F{$dp.$D(\'startTime2\')}' });">
                                <span class="input-group-addon">-</span>
                                <input id="startTime2" type="text" class='form-control' readonly="readonly" onfocus="WdatePicker({ minDate: '#F{$dp.$D(\'startTime1\')}' });">
                            </div>
                        </div>
                        <div class="col-sm-12 margin-bottom">
                            <span class="col-sm-2 text-right lineheight34">结束时间</span>
                            <div class="input-group col-sm-9">
                                <input id="endTime1" type="text" class='form-control' readonly="readonly" onfocus="WdatePicker({ maxDate: '#F{$dp.$D(\'endTime2\')}' });">
                                <span class="input-group-addon">-</span>
                                <input id="endTime2" type="text" class='form-control' readonly="readonly" onfocus="WdatePicker({ minDate: '#F{$dp.$D(\'endTime1\')}' });">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <button type="button" id="querySubmit" class="btn btn-primary">搜索</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Content/js/detail/activityManage/Attaining/index.js"></script>