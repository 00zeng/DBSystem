@{
    ViewBag.Title = "活动-PK";
    Layout = "~/Views/Shared/_Form_v2.cshtml";
}
<style type="text/css">
    tbody table td {
        padding: 0;
    }

    .radio + .radio {
        margin-top: 10px;
    }

    .table-bordered {
        border-radius: 4px;
    }

    table {
        border-collapse: collapse;
    }

        table td {
            empty-cells: show;
        }

      .transForm {
        transform: rotate(180deg);
    }
    .transfont{
        transform: rotate(180deg);
    }
</style>
<form id="form1">
    <div class="box-header">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-lg-3">
                <div class="input-group formValue margin-bottom">
                    <span class="input-group-addon no-border">活动名称</span>
                    <span type="text" id="name" class="form-control required"></span>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-lg-3">
                <div class="input-group formValue margin-bottom">
                    <span class="input-group-addon no-border">分公司</span>
                    <span id="company_name" name="company_name" class="form-control "></span>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-lg-4">
                <div class="input-group margin-bottom">
                    <span class="input-group-addon no-border">活动时间</span>
                    <span id="start_date" name="start_date" class="form-control format_date"></span>
                    <span class="input-group-addon">至</span>
                    <span id="end_date" name="end_date" class="form-control format_date"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-lg-3">
                <div class="input-group margin-bottom">
                    <span class="input-group-addon no-border">累计完成销量</span>
                    <span type="text" id="total_sale_count" class="form-control "></span>
                    <span class="input-group-addon">台</span>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-lg-3">
                <div class="input-group margin-bottom">
                    <span class="input-group-addon no-border">累计公司奖金</span>
                    <span id="total_company_reward" class="form-control " tabindex="-1" aria-hidden="true"></span>
                    <span class="input-group-addon ">元</span>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-lg-3">
                <div class="input-group margin-bottom">
                    <span class="input-group-addon no-border">累计罚款</span>
                    <span id="total_penalty" class="form-control" tabindex="-1" aria-hidden="true"></span>
                    <span class="input-group-addon ">元</span>
                </div>
            </div>
			<div class="col-xs-12 col-sm-6 col-lg-3">
                <div class="input-group formValue margin-bottom">
                    <span class="input-group-addon no-border">活动状态</span>
                    <span id="activity_status" name="activity_status" class="form-control "></span>
                </div>
            </div>

        </div>
    </div>
    <div class="box-body" style="padding-bottom:0px;">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-lg-12">
                <div class="box box-danger">
                    <div class="box-header">
                        <div class="input-group pull-left">
                            <span class="form-control " name="emp_category" id="emp_category" style="width:130px"></span>
                        </div>
                        <h6 class="inline margin pull-left">共<span class="margin" id="emp_count">0</span>人</h6>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="col-sm-12">
                            <table class="table table-bordered text-center">
                                <thead>
                                    <tr>
                                        <th class="col-sm-3"><span name=""></span></th>
                                        <th class="col-sm-6"><span name="">比赛详情</span></th>
                                        <th class="col-sm-3"><span name=""></span></th>
                                    </tr>
                                </thead>
                                <tbody id="race"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-lg-12">
                <div class="box box-warning">
                    <div class="box-header ">
                        <h4 class="pull-left">销售详情</h4>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-lg-2 col-sm-3">
                                <input class="form-control" id="emp_name" type="text" placeholder="请输入姓名">
                            </div>
                            <div class="col-lg-2 col-sm-3">
                                <input class="form-control" id="phone_sn" type="text" placeholder="请输入串码">
                            </div>
                            <div class="col-lg-2 col-sm-3">
                                <input class="form-control" id="model" type="text" placeholder="请输入型号">
                            </div>
                            <div class="col-lg-1 col-sm-1">
                                <i id="querySubmit" class='fa fa-search btn btn-primary'></i>
                            </div>
                        </div>
                        <table id="gridList" style="table-layout:fixed"></table>
                    </div>
                </div>
            </div>  
            <div class="col-xs-12 col-sm-12 col-lg-6">
                <div class="box box-success">
                    <div class="box-header">
                        <h3 class="box-title">活动机型</h3>
                        <h6 id="productCountWrap" class="inline margin" hidden>共<span class="margin" id="product_count">0</span>款</h6>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div style="height: 40px">
                            <div class="radio col-sm-3">
                                <label>
                                    <input name="product_scope" id="product_scope" type="radio" value="1" disabled>全部机型
                                </label>
                            </div>
                            <div class="radio col-sm-3">
                                <label>
                                    <input name="product_scope" type="radio" value="2" disabled>指定机型
                                </label>
                            </div>
                        </div>
                        <div id="targetProductWrap" hidden>
                            <table id="targetProduct"></table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-lg-12">
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">活动政策</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body" style="background-color:#ecf0f5">
                        <div class="col-xs-12 col-sm-12 col-lg-12 ">
                            <div class="box box-widget">
                                <div class="box-header with-border">
                                    <div class="input-group col-sm-5 col-lg-3">
                                        <h3 class="box-title input-group-addon no-border">奖罚方式</h3>
                                    </div>
                                    <div class="box-tools">
                                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                            <i class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="box-body">
                                    <div class="row">
                                        <div class="col-sm-8 col-lg-6">
                                            <div class="col-sm-3"><span class="form-control no-border ">获胜方</span></div>
                                            <div class="col-sm-9 margin-bottom">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <input type="checkbox" checked disabled>
                                                    </span>
                                                    <span class="input-group-addon">
                                                        赢取对方
                                                    </span>
                                                    <span type="text" class="form-control text-center" id="win_lose"></span>
                                                    <span class="input-group-addon">
                                                        元
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-8 col-lg-6">
                                            <div class="col-sm-3"><span class="form-control no-border "></span></div>
                                            <div class="col-sm-9 margin-bottom">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <input type="checkbox" name="win_company" disabled>
                                                    </span>
                                                    <span class="input-group-addon">
                                                        公司奖励获胜方
                                                    </span>
                                                    <span id="win_company" name="win_company" class="form-control  text-center"></span>
                                                    <span class="input-group-addon">
                                                        元
                                                    </span>

                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-4 col-lg-6">
                                            <div class="form-control radio no-border" style="margin-top:0px">
                                                <div class="margin-bottom">
                                                    <label>
                                                        <input id="win_company_condition" name="win_company_condition" type="radio" value="1" disabled>仅当双方完成率都达到100%时
                                                    </label>
                                                </div>
                                                <div class="margin-bottom">
                                                    <label>
                                                        <input name="win_company_condition" type="radio" value="2" disabled> 只要获胜方完成率达到100%时
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-8 col-lg-6">
                                            <div class="col-sm-3"><span class="form-control no-border "></span></div>
                                            <div class="col-sm-9 margin-bottom">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <input type="checkbox" name="win_penalty" disabled>
                                                    </span>
                                                    <span class="input-group-addon">
                                                        获胜方完成率低于100%，罚款
                                                    </span>
                                                    <span type="text" class="form-control text-center" name="win_penalty" id="win_penalty"></span>
                                                    <span class="input-group-addon">
                                                        元
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row ">
                                        <div class="col-sm-8 col-lg-6">
                                            <div class="col-sm-3"><span class="form-control no-border ">失败方</span></div>
                                            <div class="col-sm-9 margin-bottom">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <input type="checkbox" name="lose_win" checked disabled>
                                                    </span>
                                                    <span class="input-group-addon">
                                                        输给对方
                                                    </span>
                                                    <span type="text" class="form-control text-center" name="lose_win" id="lose_win"></span>
                                                    <span class="input-group-addon">
                                                        元
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-8 col-lg-6">
                                            <div class="col-sm-3"><span class="form-control no-border "></span></div>
                                            <div class="col-sm-9 margin-bottom">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <input type="checkbox" disabled name="lose_penalty">
                                                    </span>
                                                    <span class="input-group-addon">
                                                        失败方完成率低于100%，罚款
                                                    </span>
                                                    <span type="text" class="form-control text-center" name="lose_penalty" id="lose_penalty"></span>
                                                    <span class="input-group-addon">
                                                        元
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col-sm-8 col-lg-6">
                                            <div class="col-sm-3"><span class="form-control no-border ">备注</span></div>
                                            <div class="col-sm-9 margin-bottom">
                                                <textarea class="form-control" id="note" disabled></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="box-footer">
    <a type="submit" class="btn btn-default pull-right" href="/ActivityManage/PK/Index">返回</a>
	<button id="btn_edit" type="button" class="btn btn-primary pull-right" onclick="OpenForm('/ActivityManage/PK/Edit', '修改结束时间')">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>修改结束时间
    </button>
</div>

<script src="~/Content/js/detail/activityManage/PK/show_activity.js"></script>
