@* 价格信息详情 *@
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form_v2.cshtml";
}

<div class="box-header widt-border">
    <h3 class="box-title">价格信息详情</h3>
</div>
<div class="panel-body" style="background:white;">
    <div class="form">
        <div class="box box-default">
            <div class="box-header widt-border">
                <h3 class="box-title">导入结果</h3>
            </div>
            <div class="box-body">
                <div id="toolbar" class="btn-group">
                    分公司：<span id="company_linkname" class="label-default" style="margin-right:10px"></span>
                    导入文件：<span id="import_file" class="label-default" style="margin-right:10px"></span>
                    审批状态：<span id="approve_status"></span>
                </div>
                <table id="tb_table" style="table-layout:fixed;"></table>
            </div>
        </div>
        <div class="box box-default">
            <div class="box-header widt-border">
                <h3 class="box-title">审批信息</h3>
            </div>
            <form id="form1">
                <div class="box-body">
                    <table class="table table-bordered text-center" id="approve">
                        <tbody>
                            <tr>
                                <th width="150px">操作类型</th>
                                <th width="150px">操作人</th>
                                <th width="150px">操作人职位</th>
                                <th width="200px">时间</th>
                                <th width="200px">结果</th>
                                <th width="200px">意见</th>
                            </tr>
                            <tr>
                                <td>发起申请</td>
                                <td><span id="creator_name"></span></td>
                                <td><span id="creator_position_name"></span></td>
                                <td><span id="create_time" class="convert_datetime"></span></td>
                                <td><span id="">--</span></td>
                                <td><span id="">--</span></td>
                            </tr>
                            <tr id="approveInfoWrap" hidden>
                                <td>终审</td>
                                <td><span id="approve_name"></span></td>
                                <td><span id="approve_position_name"></span></td>
                                <td><span id="approve_time" class="convert_datetime"></span></td>
                                <td><span id="status"></span> </td>
                                <td><span id="approve_note"></span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>
    <div class="box-footer">
        <button id="btnDel" class="btn btn-danger pull-right" style="display:none" onclick="delForm()">撤回</button>
        <a  class="btn btn-default pull-right" href="/ProductManage/PriceInfo/ImportHistoryIndex">返回</a>
    </div>
</div>
<script src="~/Content/js/detail/ProductManage/PriceInfo/show.js"></script>
