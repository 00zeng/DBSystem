@*行政工资*@
@{
    ViewBag.Title = "行政工资";
    Layout = "~/Views/Shared/_Form_v2.cshtml";
}
<form id="form1">
    <div class="box-header widt-border">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-lg-3">
                <div class="input-group margin-bottom">
                    <span class="input-group-addon no-border">结算日期</span>
                    <span id="start_date" name="start_date" class="form-control format_date "></span>
                    <span class="input-group-addon">至</span>
                    <span id="end_date" name="end_date" class="form-control  format_date "></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-lg-3">
                <div class="input-group margin-bottom formValue">
                    <span class="input-group-addon no-border">姓名</span>
                    <span type="text" id="name" name="name" class="form-control required"></span>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-lg-3">
                <div class="input-group margin-bottom formValue">
                    <span class="input-group-addon no-border">职位名称</span>
                    <span type="text" id="position_name" name="position_name" class="form-control"></span>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-lg-3">
                <div class="input-group margin-bottom formValue">
                    <span class="input-group-addon no-border">入职时间</span>
                    <span type="text" id="entry_date" name="entry_date" class="form-control format_date"></span>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-lg-3">
                <div class="input-group margin-bottom formValue">
                    <span class="input-group-addon no-border">职等</span>
                    <span type="text" id="grade" name="grade" class="form-control"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="box-body">
        <div class="box box-danger">
            <div class="box-header widt-border">
                <h3 class="box-title">工资明细</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body" style="background-color:#ecf0f5">
                <div class="col-lg-12 no-padding">
                    <div class="col-xs-12 col-sm-12 col-lg-12">
                        <div class="box box-widget">
                            <div class="box-body">
                                <br />
                                <div class="col-xs-12 col-sm-6 col-lg-3">
                                    <div class="input-group margin-bottom formValue">
                                        <span class="input-group-addon no-border">应发工资</span>
                                        <span id="salary" name="salary" class="form-control"></span>
                                        <span class="input-group-addon">元</span>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6 col-lg-3">
                                    <div class="input-group margin-bottom formValue">
                                        <span class="input-group-addon no-border  text-blue">实发工资</span>
                                        <input type="text" id="actual_salary" name="actual_salary" class="form-control required number  text-blue">
                                        <span class="input-group-addon  text-blue">元</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 no-padding">
                    <div class="col-xs-12 col-sm-12 col-lg-12">
                        <div class="box box-widget">
                            <div class="box-header">
                                <div class="input-group col-sm-5 col-lg-3">
                                    <h3 class="box-title input-group-addon no-border">基本工资</h3>
                                </div>
                                <div class="box-tools">
                                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="box-body">
                                <div id="Employee" style="display:none">

                                    <div class="col-sm-12 col-md-12" id="Trainee_radio" style="display:none">
                                        <div class="col-xs-12 col-sm-6 col-lg-5">
                                            <div class="input-group margin-bottom formValue">
                                                <span class="input-group-addon  no-border">实习工资</span>
                                                <span type="text" id="" name="" class="form-control required ">按比例发放</span>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-3 col-lg-3">
                                            <div class="input-group margin-bottom formValue  ">
                                                <span id="intern_salary_radio" name="" class="form-control"></span>
                                                <span class="input-group-addon">%</span>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-12">
                                        <div class="col-xs-12 col-sm-6 col-lg-5">
                                            <div class="input-group margin-bottom formValue">
                                                <span class="input-group-addon  no-border">基本工资</span>
                                                <span type="text" id="base_salary" name="base_salary" class="form-control" @*style="background:gray"*@></span>
                                                <span class="input-group-addon">元</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-12">
                                        <div class="col-xs-12 col-sm-6 col-lg-5">
                                            <div class="input-group margin-bottom formValue">
                                                <span class="input-group-addon no-border">岗位工资</span>
                                                <span type="text" id="position_salary" name="" class="form-control required"></span>
                                                <span class="input-group-addon">元</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-12">
                                        <div class="col-xs-12 col-sm-6 col-lg-5">
                                            <div class="input-group margin-bottom formValue">
                                                <span class="input-group-addon  no-border">住房补贴</span>
                                                <span type="text" id="house_subsidy" name="house_subsidy" class="form-control required"></span>
                                                <span class="input-group-addon">元</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-12">
                                        <div class="col-xs-12 col-sm-6 col-lg-5">
                                            <div class="input-group margin-bottom formValue">
                                                <span class="input-group-addon  no-border">交通补贴</span>
                                                <span type="text" id="traffic_subsidy" name="traffic_subsidy" class="form-control required"></span>
                                                <span class="input-group-addon">元</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-12">
                                        <div class="col-xs-12 col-sm-6 col-lg-5">
                                            <div class="input-group margin-bottom formValue">
                                                <span class="input-group-addon  no-border">全勤奖金</span>
                                                <span type="text" id="attendance_reward" name="attendance_reward" class="form-control required"></span>
                                                <span class="input-group-addon">元</span>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-sm-6 col-lg-7">
                                            <div class="input-group margin-bottom formValue  ">
                                                <span class="input-group-addon  no-border  text-blue">应出勤</span>
                                                <input type="text" id="work_days" name="work_days" class="form-control required number text-blue" onblur="Work()"  value="26"/>
                                                <span class="input-group-addon   text-blue">天</span>
                                                <span class="input-group-addon  no-border  text-blue">实际出勤</span>
                                                <input type="text" id="onduty_day" name="onduty_day" class="form-control required number text-blue" onblur="Work()" />
                                                <span class="input-group-addon  text-blue ">天</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-12">
                                        <div class="col-xs-12 col-sm-6 col-lg-5">
                                            <div class="input-group margin-bottom formValue">
                                                <span class="input-group-addon  no-border">KPI&nbsp;工资</span>
                                                <span type="text" id="kpi" name="kpi" class="form-control required number"></span>
                                                <span class="input-group-addon">元</span>
                                            </div>
                                        </div>
                                        <div class="col-lg-7">
                                            标准：<a class="label label-danger margin"><span id="kpi_standard"></span>元</a>
                                            评分：<a class="label label-warning margin"><span id="kpi_standard_score"></span>分</a><br />
                                            补贴：<a class="label label-info margin"><span id="kpi_subsidy"></span>元</a>
                                            <span id="type" style="display:none">类型：<a class="label label-success margin"><span id="kpi_subsidy_score"></span></a></span>
                                            <span class="dropdown">
                                                <button class="btn btn-primary btn-xs" data-toggle="dropdown"> 查看说明 </button>
                                                <span class="dropdown-menu dropdown-menu-left" style="width:300px;">
                                                    <span class="modal-content">
                                                        <div class="modal-body"> <p id="kpi_subsidy_note"> </p> </div>
                                                    </span>
                                                </span>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-12">
                                        <div class="col-xs-12 col-sm-6 col-lg-5">
                                            <div class="input-group margin-bottom formValue">
                                                <span class="input-group-addon  no-border">工龄工资</span>
                                                <span type="text" id="seniority_salary" name="seniority_salary" class="form-control required number"></span>
                                                <span class="input-group-addon">元</span>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            工龄：<a class="label label-danger margin"><span id="year"></span></a>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-12">
                                        <div class="col-xs-12 col-sm-6 col-lg-5">
                                            <div class="input-group margin-bottom formValue">
                                                <span class="input-group-addon  no-border">特聘补贴</span>
                                                <span type="text" id="salary_subsidy" name="salary_subsidy" class="form-control required number"></span>
                                                <span class="input-group-addon">元</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div id="Trainee" style="display:none">
                                    <div class="row margin-bottom">
                                        <div class="col-sm-3"><span class="form-control no-border text-right">实习工资</span></div>
                                        <div class="col-sm-4">
                                            <span class="form-control text-center" id="intern_salary_type">按固定金额</span>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="input-group">
                                                <span class="form-control text-center" id="intern_salary"></span>
                                                <span class="input-group-addon">元/月</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-lg-12">
                        <div class="box box-widget">
                            <div class="box-header">
                                <div class="input-group col-sm-5 col-lg-3">
                                    <h3 class="box-title input-group-addon no-border">福利奖罚</h3>
                                </div>
                                <div class="box-tools">
                                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="box-body">
                                <div id="benefit" style="display:none">
                                    <div class="col-sm-12 col-md-12" id="benefitList">
                                        <label @*class="label label-danger"*@>福利</label>
                                    </div>
                                    <div class="col-sm-12 col-md-12" id="rewardsList">
                                        <label @*class="label label-danger"*@>奖罚</label>
                                    </div>
                                </div>
                                <div id="benefitNone" style="display:none">
                                    <div class="col-sm-12 col-md-12  text-center  margin-bottom">
                                        <label class="text-red">本月无福利奖罚</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 no-padding">
                    <div class="col-xs-12 col-sm-12 col-lg-12">
                        <div class="box box-widget">
                            <div class="box-header">
                                <div class="input-group col-sm-5 col-lg-3">
                                    <h3 class="box-title input-group-addon no-border">其他</h3>
                                </div>
                                <div class="box-tools">
                                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="box-body">
                                <div class="col-sm-12 col-md-12">
                                    <div class="col-xs-12 col-sm-6 col-lg-5">
                                        <div class="input-group margin-bottom formValue">
                                            <span class="input-group-addon  no-border  text-blue">请假扣款</span>
                                            <input type="text" id="leaving_deduction" name="leaving_deduction" class="form-control required number text-blue">
                                            <span class="input-group-addon  text-blue">元</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-12">
                                    <div class="col-xs-12 col-sm-6 col-lg-5">
                                        <div class="input-group margin-bottom formValue">
                                            <span class="input-group-addon  no-border text-blue">风&nbsp; 险&nbsp;金&nbsp;</span>
                                            <input type="text" id="resign_deposit" name="resign_deposit" class="form-control required number text-blue">
                                            <span class="input-group-addon text-blue">元</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-12">
                                    <div class="col-xs-12 col-sm-6 col-lg-5">
                                        <div class="input-group margin-bottom formValue">
                                            <span class="input-group-addon  no-border text-blue">社&nbsp;&nbsp;&nbsp;&nbsp;保&nbsp;&nbsp;&nbsp;</span>
                                            <input type="text" id="insurance_fee" name="insurance_fee" class="form-control required number text-blue">
                                            <span class="input-group-addon text-blue">元</span>
                                        </div>
                                    </div>
                                </div>
                                <div id="staySubsidyWrap">
                                    <div class="col-sm-12 col-md-12">
                                        <div class="col-xs-12 col-sm-6 col-lg-5">
                                            <div class="input-group margin-bottom formValue">
                                                <span class="input-group-addon  no-border">留守补助-公司</span>
                                                <span id="stay_subsidy_company" name="stay_subsidy_company" class="form-control"></span>
                                                <span class="input-group-addon">元</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-12">
                                        <div class="col-xs-12 col-sm-6 col-lg-5">
                                            <div class="input-group margin-bottom formValue">
                                                <span class="input-group-addon  no-border">留守补助-个人</span>
                                                <span id="stay_subsidy_personal" name="stay_subsidy_personal" class="form-control"></span>
                                                <span class="input-group-addon">元</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-12" id="other">
                                    <div class="col-xs-12 col-sm-6 col-lg-5">
                                        <div class="input-group margin-bottom formValue">
                                            <span class="input-group-addon  no-border text-blue">其&nbsp;&nbsp;&nbsp;&nbsp;他&nbsp;&nbsp;&nbsp;</span>
                                            <input type="text" name="others" value="0" class="form-control  text-blue" onblur="Others()">
                                            <span class="input-group-addon text-blue">元</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-lg-6">
                                        <span class="form-control no-border">
                                            <i class="fa fa-plus text-blue" onclick="addRow(this)"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-12">
                                    <div class="col-xs-12 col-sm-12 col-lg-12">
                                        <div class="input-group margin-bottom formValue">
                                            <span class="input-group-addon  no-border text-blue">备&nbsp;&nbsp;&nbsp;&nbsp;注&nbsp;&nbsp;&nbsp;</span>
                                            <textarea type="text" id="note" name="note" class="form-control text-blue"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="box-footer">
    <button type="submit" class="btn btn-primary pull-right" onclick="submitForm()">提交</button>
    <a class="btn btn-default pull-right" href="/SalaryCalculate/PayrollOffice/Index">返回</a>
</div>
<div class="modal fade" id="modalSalary" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">
                    系统提示
                </h4>
            </div>
            <div class="modal-body">
                <span>信息错误：该员工薪资信息未配置</span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" href="/SalaryCalculate/PayrollOffice/Index">取消</button>
                <button type="button" id="saleDetail" class="btn btn-primary btnDetailTag" data-href="" data-id="" data-btndetail="行政个人薪资">前往设置</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/js/detail/SalaryCalculate/PayrollOffice/add.js"></script>