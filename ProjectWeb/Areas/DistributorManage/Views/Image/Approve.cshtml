@{
    ViewBag.Title = "形象返利";
    Layout = "~/Views/Shared/_Form_v2.cshtml";
}
<form id="form1">
    <div class="box-header">
        <div class="row">
            <div class="col-xs-12 col-sm-3 col-lg-3">
                <div class="input-group margin-bottom">
                    <span class="input-group-addon no-border">活动名称：</span>
                    <span type="text" id="name" class="form-control"></span>
                </div>
            </div>
            <div class="col-xs-12 col-sm-3 col-lg-3">
                <div class="input-group ">
                    <span class="input-group-addon no-border">分公司：</span>
                    <span id="company_name" name="company_name" class="form-control" tabindex="-1" aria-hidden="true"></span>
                </div>
            </div>
            <div class="col-xs-12 col-sm-3 col-lg-3">
                <div class="input-group">
                    <span class="input-group-addon no-border">经销商：</span>
                    <span id="distributor_name" name="distributor_name" class="form-control" tabindex="-1" aria-hidden="true"></span>
                </div>
            </div>
            <div class="col-xs-12 col-sm-3 col-lg-3">
                <div class="input-group">
                    <span class="input-group-addon no-border">活动时间：</span>
                    <span id="start_date" name="start_date" class="form-control format_date"></span>
                    <span class="input-group-addon">至</span>
                    <span id="end_date" name="end_date" class="form-control format_date"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-warning">
                    <div class="box-header with-border">
                        <h3 class="box-title">返利政策</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-sm-6 margin-bottom">
                                <label>返利金额</label>
                                <div class="input-group col-sm-9">
                                    <span id="rebate" class="form-control"></span>
                                    <span class="input-group-addon">元</span>
                                </div>
                            </div>
                            <div class="col-sm-6 margin-bottom">
                                <div class="form-group">
                                    <label>返利模式</label>
                                    <div class="row">
                                        <div class="radio col-sm-6">
                                            <label>
                                                <input id="target_mode" name="target_mode" type="radio" value="1" disabled>按时间返利
                                            </label>
                                        </div>
                                        <div class="radio col-sm-6" style="margin-top: 10px">
                                            <label>
                                                <input name="target_mode" type="radio" value="2" disabled>按销量返利
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @*按时间返利*@
                            @*<div class="col-sm-6" id="mode1">
                                    <div class="input-group col-sm-6 margin-bottom">
                                        <label>活动结束时间</label>
                                        <span type="text" id="end_date" class="form-control format_date"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6" id="mode2">
                                    <div class="input-group col-sm-6 margin-bottom">
                                        <label>活动时长</label>
                                        <span id="day" class="form-control"></span>
                                    </div>
                                </div>*@
                            @*按销量返利*@
                            <div class="col-sm-6 margin-bottom" id="mode3" style="display:none">
                                <label>目标销量</label>
                                <label class="label label-warning">该经销商前三个月月均销量为&nbsp;<span id="sale_avg_before"></span>&nbsp;</label>
                                <div class="input-group col-sm-9 margin-bottom">
                                    <span class="form-control" id="activity_target"></span>
                                    <span class="input-group-addon">台</span>

                                </div>
                            </div>
                            <div class="col-sm-6 margin-bottom" id="mode4" style="display:none">
                                <div class="form-group">
                                    <label>计量方式</label>
                                    <div class="row">
                                        <div class="radio col-sm-6">
                                            <label>
                                                <input id="target_content" name="target_content" type="radio" value="1" disabled>按实销量
                                            </label>
                                        </div>
                                        <div class="radio col-sm-6" style="margin-top: 10px">
                                            <label>
                                                <input name="target_content" type="radio" value="2" disabled>按下货量
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12 margin-bottom">
                                <div class="form-group">
                                    <label>备注说明</label>
                                    <textarea id="note" class="form-control" disabled></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="box box-default">
            <div class="box-header widt-border">
                <h3 class="box-title">审批</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <table class="table table-bordered text-center" id="approve">
                    <tbody>
                        <tr>
                            <th>操作类型</th>
                            <th>操作人</th>
                            <th>操作人职位</th>
                            <th>时间</th>
                            <th>结果</th>
                            <th>意见</th>
                        </tr>
                        <tr>
                            <td>发起申请</td>
                            <td><span id="creator_name"></span></td>
                            <td><span id="creator_position_name"></span></td>
                            <td><span id="create_time"></span></td>
                            <td><span id="">--</span></td>
                            <td><span id="">--</span></td>
                        </tr>
                        <tr>
                            <td>当前审批</td>
                            <td><span id="approve_name"></span></td>
                            <td><span id="approve_position_name"></span></td>
                            <td><span id="currentTime"></span></td>
                            <td class="radio no-margin no-border">
                                <label>
                                    <input name="status" type="radio" value="1" checked>通过 &nbsp;&nbsp;
                                </label>
                                <label>
                                    <input name="status" type="radio" value="-1">不通过
                                </label>
                            </td>
                            <td class="no-padding"><input id="approve_note" class="form-control" /></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>


<div class="box-footer">
    <button type="submit" class="btn btn-primary pull-right" onclick="submitForm()">提交</button>
    <a type="submit" class="btn btn-default pull-right" href="/DistributorManage/image/approveIndex">返回</a>
</div>
<script src="~/Content/js/detail/DistributorManage/image/approve.js"></script>
