@*年终奖金*@
@{
    ViewBag.Title = "年终奖列表";
    Layout = "~/Views/Shared/_Form_v2.cshtml";
}
<div class="box-header widt-border">
    <h3 class="box-title">年终奖金</h3>
</div>
<form id="form1">
    <div class="box-header">
        <div class="col-xs-12 col-sm-4 col-lg-3">
            <div class="input-group formValue margin-bottom">
                <span class="input-group-addon no-border">姓名：</span>
                <span id="name" class="form-control "></span>
            </div>
        </div>
        <div class="col-xs-12 col-sm-4 col-lg-3">
            <div class="input-group formValue margin-bottom">
                <span class="input-group-addon no-border">职位：</span>
                <span id="position_name" class="form-control "></span>
            </div>
        </div>
        <div class="col-xs-12 col-sm-4 col-lg-3">
            <div class="input-group formValue margin-bottom">
                <span class="input-group-addon no-border">等级：</span>
                <span id="grade" class="form-control "></span>
            </div>
        </div>
		<div class="col-xs-12 col-sm-4 col-lg-3" >
            <div class="input-group margin-bottom">
                <span class="input-group-addon no-border">发放月份</span>
                <span id="month" class="form-control"></span>
            </div>
        </div>
    </div>

    <div class="box-body" style="padding-bottom:0px;">
        <div class="col-xs-12 col-sm-12 col-lg-12">
            <div class="box box-warning">
                <div class="box-header">
                    <h3 class="box-title"><span id="position_name"></span>年终奖金</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body" style="background-color:#ecf0f5">
                    <div class="col-xs-12 col-sm-12 col-lg-12">
                        <div class="box box-widget">
                            <div class="box-body">
                                <div class="row margin-bottom">
                                    <div class="col-sm-2"><span class="form-control no-border text-right">年终奖金</span></div>
                                    <div class="col-sm-4">
                                        <div class="input-group">
                                            <span type="text" class="form-control text-center" id="amount"></span>
                                            <span class="input-group-addon">元</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row margin-bottom">
                                    <div class="col-sm-2"><span class="form-control no-border text-right">奖金说明</span></div>
                                    <div class="col-sm-8">
                                        <textarea id="note" class="form-control" disabled></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

	<div class="box-body" style="padding-bottom:0px;">
	<div class="col-xs-12 col-sm-12 col-lg-12">
            <div class="box box-default">
                <div class="box-header widt-border">
                    <h3 class="box-title">审批</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <table class="table table-bordered text-center" id="approve">
                        <tbody>
                            <tr>
                                <th width="150px">操作类型</th>
                                <th width="150px">操作人</th>
                                <th width="150px">操作人职位</th>
                                <th width="200px">时间</th>
                                <th width="200px">结果</th>
                                <th width="200px">意见</th>
                            </tr>
                            <tr>
                                <td>发起申请</td>
                                <td><span id="creator_name"></span></td>
                                <td><span id="creator_position_name"></span></td>
                                <td><span id="create_time"></span></td>
                                <td><span id="">--</span></td>
                                <td><span id="">--</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
	</div>
</form>

    <div class="box-footer">
        <a type="submit" class="btn btn-default pull-right" href="/FinancialAccounting/AnnualBonus/Index">返回</a>
    </div>


<script src="~/Content/js/detail/FinancialAccounting/AnnualBonus/show.js"></script>