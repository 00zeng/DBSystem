@{
    ViewBag.Title = "其他设置";
    Layout = "~/Views/Shared/_Form_v2.cshtml";
}
<style type="text/css">
    tbody table td {
        padding: 0;
    }

    .radio + .radio {
        margin-top: 10px;
    }

    .table-bordered {
        border-radius: 4px;
    }
</style>

<link href="~/Content/js/bootstrap-duallistbox/bootstrap-duallistbox.min.css" rel="stylesheet" />

<form id="form1">
    <div class="box-header widt-border">
        <div class="margin-bottom">
            <h3 class="box-title">其他设置</h3>
        </div>
        <div class="row">
           <div class="col-sm-4 ">
            <div class="input-group margin-bottom">
                <span class="input-group-addon no-border"> 机构类型</span>
                <span id="company_category" class="form-control"></span>
            </div>
        </div>
        <div class="col-sm-4" id="company">
            <div class="input-group margin-bottom">
                <span class="input-group-addon no-border"> 机构</span>
                <span id="company_name" class="form-control"></span>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="input-group margin-bottom">
                <span class="input-group-addon no-border"> 生效时间</span>
                <span id="effect_date" class="form-control" /></span>
            </div>
        </div>
        </div>
    </div>

    <div class="box-body">
        <div class="col-sm-12 col-lg-6">
            <div class="box box-danger">
                <div class="box-header">

                    <h3 class="box-title">工龄工资</h3>
                    <div class="box-tools">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>

                </div>
                <div class="box-body">
                    <div class="form-group col-md-12">
                        <table id="seniorityWage_table" class="table table-bordered text-center">
                            <tr>
                                <th class="col-sm-6">工龄（年）</th>
                                <th class="col-sm-4">工龄工资（元/月）</th>
                            </tr>
                            
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-lg-6">
            <div class="box box-warning">
                <div class="box-header">
                    <div class="input-group col-sm-5 col-lg-3">
                        <h3 class="box-title input-group-addon no-border">其他</h3>
                        <div class="checkbox input-group-addon no-border">
                            <label class="text-red">
                                <input type="checkbox" id="other_setting" disabled />将所有个人设置重置为此方案
                            </label>
                        </div>
                    </div>
                    <div class="box-tools">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body" style="height:235px">
                    <div class="row margin-bottom">
                        <div class="col-sm-2 "><span class="form-control no-border"><strong>实习工资</strong></span></div>
                        <div class="col-sm-5 col-lg-5">
                            <div class="input-group">
                                <span class="input-group-addon radio no-border" style="text-align:left">
                                    <label>
                                        <input id="intern_salary_type" name="intern_salary_type" type="radio" value="1" disable>按总工资比例
                                    </label>
                                </span>			
                                <span type="text" name="ratio_hidden" id="intern_ratio_salary" class="form-control text-center"></span>
                                <span name="ratio_hidden" class="input-group-addon" id="intern1">% </span>
                            </div>
                        </div>
                        <div class="col-sm-5 col-lg-5">
                            <div class="input-group">
                                <span class="input-group-addon radio no-border" style="text-align:left">
                                    <label>
                                        <input name="intern_salary_type" type="radio" value="2" disabled>按固定金额
                                    </label>
                                </span>
                                <span type="text" name="salary_hidden" id="intern_fix_salary" class="form-control  text-center" style="display:none"></span>
                                <span name="salary_hidden" class="input-group-addon" style="display:none" id="intern2">元/月</span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-2"><span class="form-control no-border "><strong>离职押金</strong></span></div>
                        <div class="col-sm-5 col-lg-5">
                            <div class="input-group  formValue">
                                <span id="resign_deposit" name="" class="form-control text-center"></span>
                                <span class="input-group-addon">元/月</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

		<div class="col-xs-12 col-sm-12 col-lg-12">
            <div class="box box-default  collapsed-box">
                <div class="box-header widt-border">
                    <h3 class="box-title">审批</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <table class="table table-bordered text-center" id="approve">
                        <tbody>
                            <tr>
                                <th width="150px">操作类型</th>
                                <th width="150px">操作人</th>
                                <th width="150px">操作人职位</th>
                                <th width="200px">时间</th>
                                <th width="200px">结果</th>
                                <th width="200px">意见</th>
                            </tr>
                            <tr>
                                <td>发起申请</td>
                                <td><span id="creator_name"></span></td>
                                <td><span id="creator_position_name"></span></td>
                                <td><span id="create_time"></span></td>
                                <td><span id="">--</span></td>
                                <td><span id="">--</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
		</div>

    </div>
</form>

<div class="box-footer">
    <a type="submit" class="btn btn-default pull-right" href="javascript:history.back(-1);">返回</a>
</div>

<script src="~/Content/js/detail/FinancialAccounting/PositionSalary/other_show.js"></script>
