@* 岗位薪资 *@
@{
    ViewBag.Title = "当前薪资";
    Layout = "~/Views/Shared/_Index_v2.cshtml";
}

<style>
    .lineheight34 {
        line-height: 34px;
    }
</style>

<div class="panel-body" style="padding-bottom:0px;">

    <div id="toolbar" class="btn-group">
        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modalQuery">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>更多搜索
        </button>
        <div class="input-group">
            <select class="form-control" id="category">
                <option value="">请选择薪资类型</option>
                <option value="1">导购薪资</option>
                <option value="22">业务员KPI</option>
                <option value="21">业务经理KPI</option>
                <option value="3">工龄工资及其他薪资设置</option>
                <option value="4">职等薪资导入</option>
                <option value="11">培训薪资</option>
                <option value="12">培训经理薪资</option>
                <option value="13">部门薪资</option>
            </select>
        </div>
    </div>

    <div>
        <table id="gridList"></table>
    </div>

</div>

<div class="modal fade" id="modalQuery" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">
                    按条件搜索
                    <button id="clear" type="button" class="btn btn-warning btn-xs">清空</button>
                </h4>
            </div>
            <div class="modal-body">
                <form id="queryForm">
                    <div class="row">
                        <div class="col-sm-12 margin-bottom">
                            <span for="company_id" class="col-sm-2 text-right lineheight34">机构</span>
                            <div class="input-group col-sm-9">
                                <select id="company_id" class="form-control" type="text"></select>
                            </div>
                        </div>
                        <div class="col-sm-12 margin-bottom">
                            <span for="is_template" class="col-sm-2 text-right lineheight34">是否公版</span>
                            <div class="input-group col-sm-9">
                                <select id="is_template" class="form-control" type="text">
                                    <option value="">--请选择是否公版--</option>
                                    <option value="1">公版且覆盖</option>
                                    <option value="2">公版不覆盖</option>
                                    <option value="3">非公版</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-12 margin-bottom">
                            <span class="col-sm-2 text-right lineheight34">生效时间</span>
                            <div class="input-group col-sm-9">
                                <input id="startTime1" type="text" class='form-control' readonly="readonly" onfocus="WdatePicker({dateFmt: 'yyyy-MM', maxDate: '#F{$dp.$D(\'startTime2\') || \'%y-%M\'}' });">
                                <span class="input-group-addon">-</span>
                                <input id="startTime2" type="text" class='form-control' readonly="readonly" onfocus="WdatePicker({dateFmt: 'yyyy-MM', minDate: '#F{$dp.$D(\'startTime1\')}' , maxDate: '%y-%M'});">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <button type="button" id="querySubmit" class="btn btn-primary">搜索</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Content/js/detail/FinancialAccounting/PositionSalary/index.js"></script>