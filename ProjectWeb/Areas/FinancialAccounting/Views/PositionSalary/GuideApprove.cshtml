@{
    ViewBag.Title = "达量";
    Layout = "~/Views/Shared/_Form_v2.cshtml";
}
<style type="text/css">
    tbody table td {
        padding: 0;
    }

    .radio + .radio {
        margin-top: 10px;
    }

    .table-bordered {
        border-radius: 4px;
    }
</style>
<form id="form1">
    <div class="box-header">
        <div class="col-xs-12 col-sm-4 col-lg-3">
            <div class="input-group formValue margin-bottom">
                <span class="input-group-addon no-border">分公司：</span>
                <span id="company_name" class="form-control "></span>
            </div>
        </div>
        <div class="col-xs-12 col-sm-4 col-lg-3">
            <div class="input-group margin-bottom">
                <span class="input-group-addon no-border">生效时间</span>
                <span id="effect_date" class="form-control"></span>
            </div>
        </div>
    </div>
    <div class="box-body" style="padding-bottom:0px;">
        <div class="col-xs-12 col-sm-12 col-lg-12">
            <div class="box box-danger">
                <div class="box-header">
                    <h3 class="box-title">底薪</h3>
                </div>
                <div class="box-body" style="background-color:#ecf0f5">

                    <div class="col-xs-12 col-sm-12 col-lg-6">
                        <div class="box box-widget">
                            <div class="box-header with-border">
                                <h3 class="box-title">星级制</h3>
                                <div class="box-tools">
                                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="box-body">
                                <table class="table table-bordered text-center" id="baseStarlevel_table">
                                    <tr>
                                        <th class="col-sm-4 bg-gray-light">星级</th>
                                        <th class="col-sm-5 bg-gray-light">底薪（元/月）</th>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-lg-6">
                        <div class="box box-widget">
                            <div class="box-header with-border">
                                <h3 class="box-title">浮动底薪</h3>
                                <div class="box-tools">
                                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="box-body">
                                <table class="table table-bordered text-center" id="float_salary_tr">
                                    <tr>
                                        <th class="col-sm-5 bg-gray-light">月销量（台）</th>
                                        <th class="col-sm-3 bg-gray-light">底薪（元/月）</th>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-lg-6">
                        <div class="box box-widget">
                            <div class="box-header with-border">
                                <h3 class="box-title">达标底薪</h3>
                            </div>
                            <div class="box-body">
                                <table class="table table-bordered text-center " id="GuideSalary">
                                    <tr>
                                        <th class="col-sm-4  bg-gray-light"><span class="form-control no-border bg-gray-light">达标提成金额</span></th>
                                        <td class="col-sm-5">
                                            <div class="input-group formValue">
                                                <span class="form-control text-center" id="standard_salary"></span>
                                                <span class="input-group-addon no-border">元/月</span>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-lg-12">
            <div class="box box-warning">
                <div class="box-header">
                    <h3 class="box-title">年终奖</h3>
                </div>
                <div class="box-body" style="background-color:#ecf0f5">
                    <div class="col-xs-12 col-sm-12 col-lg-6">
                        <div class="box box-widget">
                            <div class="box-header with-border">
                                <h3 class="box-title">星级制</h3>
                                <div class="box-tools">
                                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="box-body">
                                <table class="table table-bordered text-center" id="yearStarlevel_table">
                                    <tr>
                                        <th class="col-sm-4 bg-gray-light">星级</th>
                                        <th class="col-sm-5 bg-gray-light">底薪（元/月）</th>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-lg-6">
                        <div class="box box-widget">
                            <div class="box-header with-border">
                                <h3 class="box-title">按销量</h3>
                                <div class="box-tools">
                                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="box-body">
                                <table class="table table-bordered text-center" id="sales_volume_tr">
                                    <tr>
                                        <th class="col-sm-5 bg-gray-light">平均月销量（台）</th>
                                        <th class="col-sm-3 bg-gray-light">奖金（元/台）</th>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        @*增员奖励*@
        <div class="col-xs-12 col-sm-12 col-lg-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">增员奖励</h3>
                </div>
                <div class="box-body" style="background-color:#ecf0f5">
                    <div class="col-xs-12 col-sm-12 col-lg-6">
                        <div class="box box-widget">
                            <div class="box-body">
                                <table id="" class="table table-bordered">
                                    <tr>
                                        <th class="bg-gray-light col-md-3 text-right">奖励启用状态</th>
                                        <td class="col-md-8">
                                            <div class="radio col-sm-4">
                                                <label>
                                                    <input type="radio" id="increase_award_status" name="increase_award_status" value="1" disabled>启用
                                                </label>
                                            </div>
                                            <div class="radio col-sm-4">
                                                <label>
                                                    <input type="radio" name="increase_award_status" value="0" disabled>关闭
                                                </label>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="bg-gray-light text-right">新员工入职月数</th>
                                        <td>
                                            <div class="input-group">
                                                <span class="input-group-addon no-border">新员工入职满</span>
                                                <span type="text" class="form-control text-center" id="increase_month"></span>
                                                <span class="input-group-addon no-border">个月，介绍人享受介绍费奖励</span>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="bg-gray-light text-right">保护期</th>
                                        <td>
                                            <div class="input-group">
                                                <span type="text" class="form-control text-center" id="increase_protect"></span>
                                                <span class="input-group-addon no-border">个月</span>
                                                <span class="input-group-addon no-border text-red">保护期内离职再入职不享受介绍费</span>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="bg-gray-light text-right">介绍费奖金</th>
                                        <td>
                                            <div class="input-group">
                                                <span type="text" class="form-control text-center" id="increase_salary"></span>
                                                <span class="input-group-addon no-border">元</span>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="bg-gray-light text-right">增员提成</th>
                                        <td>
                                            <div class="input-group">
                                                <span type="text" class="form-control text-center" id="increase_commission"></span>
                                                <span class="input-group-addon no-border">元/台</span>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="bg-gray-light text-right">生效时间</th>
                                        <td><span id="increase_effect_time" class="form-control text-center format_date"></span></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-lg-12">
            <div class="box box-default">
                <div class="box-header widt-border">
                    <h3 class="box-title">审批</h3>
                </div>
                <div class="box-body">
                    <table class="table table-bordered text-center" id="approve">
                        <tbody>
                            <tr>
                                <th>操作类型</th>
                                <th>操作人</th>
                                <th>操作人职位</th>
                                <th>时间</th>
                                <th>结果</th>
                                <th>意见</th>
                            </tr>
                            <tr>
                                <td>发起申请</td>
                                <td><span id="creator_name"></span></td>
                                <td><span id="creator_position_name"></span></td>
                                <td><span id="create_time"></span></td>
                                <td><span id="">--</span></td>
                                <td><span id="">--</span></td>
                            </tr>
                            <tr>
                                <td>当前审批</td>
                                <td><span id="approve_name"></span></td>
                                <td><span id="approve_position_name"></span></td>
                                <td><span id="currentTime"></span></td>
                                <td class="radio no-margin no-border">
                                    <label>
                                        <input name="status" type="radio" value="1" checked>通过 &nbsp;&nbsp;
                                    </label>
                                    <label>
                                        <input name="status" type="radio" value="-1">不通过
                                    </label>
                                </td>
                                <td class="no-padding"><input id="approve_note" class="form-control" /></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="box-footer">
    <button type="submit" class="btn btn-primary pull-right" onclick="submitForm()">提交</button>
    <button type="submit" class="btn btn-default pull-right" onclick="javascript:history.back(-1);">返回</button>
</div>

<script src="~/Content/js/detail/FinancialAccounting/PositionSalary/guide_approve.js"></script>
