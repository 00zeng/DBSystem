                                                <select name="area_l1_id" class="form-control"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-lg-6" id="product_expensive_div">
                                <div class="box box-widget">
                                    <div class="box-header with-border">
