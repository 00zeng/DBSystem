@{
    ViewBag.Title = "达量";
    Layout = "~/Views/Shared/_Form_v2.cshtml";
}
<style type="text/css">
    tbody table td {
        padding: 0;
    }

    .radio + .radio {
        margin-top: 10px;
    }

    .table-bordered {
        border-radius: 4px;
    }
</style>
<form id="form1">
    <div class="box-header">
        <div class="col-xs-6 col-sm-3 col-lg-3">
            <div class="input-group formValue margin-bottom">
                <span class="input-group-addon no-border">姓名：</span>
                <span id="name" class="form-control "></span>
            </div>
        </div>
        <div class="col-xs-6 col-sm-3 col-lg-3">
            <div class="input-group formValue margin-bottom">
                <span class="input-group-addon no-border">等级：</span>
                <span id="grade" class="form-control "></span>
            </div>
        </div>
        <div class="col-xs-6 col-sm-3 col-lg-3">
            <div class="input-group formValue margin-bottom">
                <span class="input-group-addon no-border">机构：</span>
                <span id="company_name" class="form-control "></span>
            </div>
        </div>
        <div class="col-xs-6 col-sm-3 col-lg-3">
            <div class="input-group margin-bottom">
                <span class="input-group-addon no-border">入职时间：</span>
                <span id="entry_date" class="form-control format_date"></span>
            </div>
        </div>
    </div>
    <div class="box-body" style="padding-bottom:0px;">
        <div class="col-xs-12 col-sm-12 col-lg-12">
            <div class="box box-warning">
                <div class="box-header">
                    <h3 class="box-title"><span id="position_name"></span>薪资</h3>
                </div>
                <div class="box-body" style="background-color:#ecf0f5">
                    <div class="col-xs-12 col-sm-12 col-lg-12">
                        <div class="box box-widget">
                            <div class="box-body">
                                <table class="table table-bordered text-center">
                                    <tr>
                                        <th class="col-sm-2  bg-gray-light"><span class="form-control no-border bg-gray-light">实习工资</span></th>
                                        <td colspan="3" class="col-sm-10">
                                            <div class="col-md-6 col-lg-3">
                                                <div class="input-group">
                                                    <span class="input-group-addon radio no-border">
                                                        <label>
                                                            <input id="intern_salary_type" name="intern_salary_type" type="radio" value="1" disabled>按总工资比例
                                                        </label>
                                                    </span>
                                                    <span name="ratio_hidden" id="intern_ratio_salary" class="form-control text-center" style="display:none"></span>
                                                    <span name="ratio_hidden" class="input-group-addon no-border" style="display:none">% </span>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-lg-3">
                                                <div class="input-group">
                                                    <span class="input-group-addon radio no-border">
                                                        <label>
                                                            <input name="intern_salary_type" type="radio" value="2" disabled>按固定金额
                                                        </label>
                                                    </span>
                                                    <span type="text" name="salary_hidden" id="intern_fix_salary" class="form-control  text-center" style="display:none"></span>
                                                    <span name="salary_hidden" class="input-group-addon no-border" style="display:none">元/月</span>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="col-sm-2  bg-gray-light"><span class="form-control no-border bg-gray-light">离职押金</span></th>
                                        <td class="col-sm-4">
                                            <div class="input-group col-lg-6 col-md-12  formValue">
                                                <span id="resign_deposit" name="" class="form-control text-center " ></span>
                                                <span class="input-group-addon no-border">元/月</span>
                                            </div>
                                        </td>
                                        <th class="col-sm-2  bg-gray-light"><span class="form-control no-border bg-gray-light">交通补贴</span></th>
                                        <td class="col-sm-4">
                                            <div class="input-group col-lg-6 col-md-12  formValue">
                                                <span id="traffic_subsidy" name="" class="form-control text-center " ></span>
                                                <span class="input-group-addon no-border">元/月</span>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th class="col-sm-2  bg-gray-light"><span class="form-control no-border bg-gray-light">生效时间</span></th>
                                        <td colspan="3" class="col-sm-4">
                                            <div class="input-group">
                                                <span id="effect_date" class="form-control format_date no-border" ></span>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                                <span style="color:red;font-family:'微软雅黑'">新入职员工，该部分薪资在财务经理确认后当月生效；入职后的修改则在财务经理确认后次月生效</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-lg-12">
            <div class="box box-danger">
                <div class="box-header widt-border">
                    <h3 class="box-title">审批</h3>
                </div>
                <div class="box-body">
                    <table class="table table-bordered text-center" id="approve">
                        <tbody>
                            <tr>
                                <th>操作类型</th>
                                <th>操作人</th>
                                <th>操作人职位</th>
                                <th>时间</th>
                                <th>结果</th>
                                <th>意见</th>
                            </tr>
                            <tr>
                                <td>发起申请</td>
                                <td><span id="creator_name"></span></td>
                                <td><span id="creator_position_name"></span></td>
                                <td><span id="create_time"></span></td>
                                <td><span id="">--</span></td>
                                <td><span id="">--</span></td>
                            </tr>
                            <tr>
                                <td>当前审批</td>
                                <td><span id="approve_name"></span></td>
                                <td><span id="approve_position_name"></span></td>
                                <td><span id="currentTime"></span></td>
                                <td class="radio no-margin no-border">
                                    <label>
                                        <input name="status" type="radio" value="1" checked>通过 &nbsp;&nbsp;
                                    </label>
                                    <label>
                                        <input name="status" type="radio" value="-1">不通过
                                    </label>
                                </td>
                                <td class="no-padding"><input id="approve_note" class="form-control" /></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="box-footer">
    <button type="submit" class="btn btn-primary pull-right" onclick="submitForm()">提交</button>
    <button type="submit" class="btn btn-default pull-right" onclick="javascript:history.back(-1);">返回</button>
</div>

<script src="~/Content/js/detail/FinancialAccounting/employeeSalary/emp_approve.js"></script>
