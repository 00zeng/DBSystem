@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form_dinf.cshtml";
}
<link href="~/Content/js/bootstrap-doublebox/doublebox-bootstrap.css" rel="stylesheet" />
<script src="~/Content/js/bootstrap-doublebox/doublebox-bootstrap.js"></script>
<link href="~/Content/css/dinf-table.css" rel="stylesheet" />
<style>
    /*.select2-container--default .select2-selection--single .select2-selection__rendered {
        width: 113px;
        line-height: 24px;
    }*/
    .main-title2-type input {
        width: 150px;
        height: 26px;
        border: 1px solid;
        border-color: #ddd;
    }

    /*radio 间距*/
    .ue-container {
        width: 100%;
        margin: 0 auto;
        padding: 20px 40px;
        border: 1px solid #ddd;
        background: #fff;
    }
</style>
<header class="panel-heading">
    <span style="color:#ffffff">留守补助审批</span>
</header>
<form id="form1">
    <div class="panel-body" style="background:white;">
        <div class="row">
            <div class="col-xs-1">
            </div>
            <div class="col-xs-10" style="min-width:1000px">
                <div class="form">
                    <div class="main-title main-title2">
                        <div class="main-title2-type">
                            机构：<span id="company_name"></span>
                        </div>
                    </div>
                    <div class="mid-title-wrap">
                        <div class="mid-title">发放对象</div>
                    </div>
                    <table id="tb_table" style="table-layout:fixed;"></table>


                        <div class="mid-title-wrap">
                            <div class="mid-title">补助金额</div>
                        </div>
                        <table class="normal-z">
                            <tr>
                                <th>公司</th>
                                <td>
                                    <span id="company_amount"></span> 元
                                </td>
                                <th>员工</th>
                                <td>
                                    <span id="emp_amount"></span> 元
                                </td>
                                <th>补助总金额</th>
                                <td></td>
                            </tr>
                        </table>
                        <div class="mid-title-wrap">
                            <div class="mid-title">审批</div>
                        </div>
                        <table class="normal-approve" id="approve">
                            <tr>
                                <th>操作类型</th>
                                <th>操作人</th>
                                <th>操作人职位</th>
                                <th>时间</th>
                                <th>结果</th>
                                <th>意见</th>
                            </tr>
                            <tr>
                                <td>发起申请</td>
                                <td><span id="creator_name"></span></td>
                                <td><span id="creator_position_name"></span></td>
                                <td><span id="create_time"></span></td>
                                <td><span id=""></span></td>
                                <td><span id=""></span></td>
                            </tr>
                            <tr>
                                <td id="next_approve">总经理审批</td>
                                <td><span id="approve_name"></span></td>
                                <td><span id="approve_position_name"></span></td>
                                <td><span id="approve_time"></span></td>
                                <td>
                                    <input name="status" type="radio" value="1" checked>通过 &nbsp;&nbsp;
                                    <input name="status" type="radio" value="-1">不通过
                                </td>
                                <td><input id="approve_note" style="width:100%" /></td>
                            </tr>
                        </table>
                        <span style="color:red">留守补助审批后将于本月随工资一同发放</span>
                        <div class="main-submit">
                            <a class="btn-return" href="javascript:history.go(-1);"> 返回 </a>
                            <input type="button" value="确认" class="btn-submit" onclick="submitForm()" />
                        </div>
</div>
            </div>
        </div>
    </div>
</form>
<script src="~/Content/js/detail/financialAccounting/staySubsidy/approve.js"></script>
