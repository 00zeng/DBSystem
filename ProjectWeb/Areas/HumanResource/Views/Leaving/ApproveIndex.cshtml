@* 离职 *@
@{
    ViewBag.Title = "人力资源";
    Layout = "~/Views/Shared/_Index_v2.cshtml";
}
<div class="panel-body" style="padding-bottom:0px;">

    <div id="toolbar" class="btn-group">
        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modalQuery">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>搜索
        </button>
    </div>

    <div>
        <table id="gridList"></table>
    </div>

</div>

<div class="modal fade" id="modalQuery" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">按条件搜索
				<button id="clear" type="button" class="btn btn-warning btn-xs">清空</button>
				</h4>
            </div>
            <div class="modal-body">
                <form id="queryForm" class="form-horizontal">

                   
                    <div class="form-group">
                        <span for="name" class="col-sm-2 control-label">姓名</span>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="name">
                        </div>
                    </div>

                    <div class="form-group">
                        <span for="company_id" class="col-sm-2 control-label">机构</span>
                        <div class="col-sm-9">
                            <select class="form-control" id="company_id"></select>
                        </div>
                    </div>
                    @*<div class="form-group">
                <span for="position_name" class="col-sm-2 control-label">职位名</span>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="position_name">
                </div>
            </div>*@
                    <div class="form-group">
                        <span for="startDate" class="col-sm-2 control-label">入职时间</span>
                        <div class="col-sm-9">
                            <input id="startDate" type="text" style="border-color:#d2d6de;height:34px" class='form-control Wdate' readonly="readonly" onfocus="WdatePicker();">
                        </div>
                    </div>
                    <div class="form-group">
                        <span for="endDate" class="col-sm-2 control-label">入职时间</span>
                        <div class="col-sm-9">
                            <input id="endDate" type="text" style="border-color:#d2d6de;height:34px" class='form-control Wdate' readonly="readonly" onfocus="WdatePicker();">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <button type="button" id="querySubmit" class="btn btn-primary">搜索</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Content/js/detail/humanResource/leaving/approve_index.js"></script>