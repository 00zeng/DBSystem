@* 买断信息 *@
@{
    ViewBag.Title = "申请记录";
    Layout = "~/Views/Shared/_Index_v2.cshtml";
}
<div class="panel-body" style="padding-bottom:0px;">

    <div id="toolbar" class="btn-group">
        <button id="btn_add" type="button" class="btn btn-primary" onclick="window.location.href='Add'">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>申请
        </button>
        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modalQuery">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>更多搜索
        </button>
		<div class="input-group">
        			<input class="form-control" id="distributorName" type="text" placeholder="请输入经销商"></input>
		</div>
    </div>

    <div>
        <table id="gridList"></table>
    </div>

</div>

<div class="modal fade" id="modalQuery" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">按条件搜索
				<button id="clear" type="button" class="btn btn-warning btn-xs">清空</button>
				</h4>
            </div>
            <div class="modal-body">
                <form id="queryForm" class="form-horizontal">
                    <div class="form-group">
                        <span for="salesName" class="col-sm-2 control-label">业务员</span>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="salesName">
                        </div>
                    </div>
                    <div class="form-group">
                        <span for="role_name" class="col-sm-2 control-label">状态</span>
                        <div class="col-sm-10 checkbox">
                            <label>
                                <input type="checkbox" id="isMyRequest"  name="isMyRequest">我的申请
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <button type="button" id="querySubmit" class="btn btn-primary">搜索</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Content/js/detail/SaleManage/BuyoutInfo/request_index.js"></script>
